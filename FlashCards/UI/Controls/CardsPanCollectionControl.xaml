<?xml version="1.0" encoding="utf-8" ?>

<ContentView
    x:Class="FlashCards.UI.Controls.CardsPanCollectionControl"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:FlashCards.UI.Controls"
    x:Name="RootCardCollectionView">

    <ContentView.Content>
        <controls:TwoSidesCardControl_Old
            x:Name="TwoSidesCard"
            Margin="30,30"
            HorizontalOptions="Fill"
            VerticalOptions="Fill">
            <controls:TwoSidesCardControl_Old.GestureRecognizers>
                <PanGestureRecognizer PanUpdated="OnPanUpdated" />
            </controls:TwoSidesCardControl_Old.GestureRecognizers>
        </controls:TwoSidesCardControl_Old>
    </ContentView.Content>
</ContentView>