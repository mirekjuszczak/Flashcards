<?xml version="1.0" encoding="utf-8" ?>

<ContentView
    x:Class="FlashCards.UI.Controls.CardsCollectionControl"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:FlashCards.UI.Controls"
    x:Name="RootCardCollectionView">

    <ContentView.Content>
        <SwipeView>
            <SwipeView.LeftItems>
                <SwipeItems>
                    <SwipeItem Invoked="OnSwipeNext" />
                </SwipeItems>
            </SwipeView.LeftItems>
            <SwipeView.RightItems>
                <SwipeItems>
                    <SwipeItem Invoked="OnSwipePrevious" />
                </SwipeItems>
            </SwipeView.RightItems>

            <controls:TwoSidesCardControl
                x:Name="TwoSidesCard"
                Margin="30,30"
                HorizontalOptions="Fill"
                VerticalOptions="Fill" />
        </SwipeView>
    </ContentView.Content>
</ContentView>