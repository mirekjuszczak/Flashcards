<?xml version="1.0" encoding="utf-8" ?>

<VerticalStackLayout
    x:Class="FlashCards.UI.Controls.TwoSidesCard"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Name="RootCardView">

    <Border
        x:Name="FrontCard"
        WidthRequest="200"
        HeightRequest="400"
        StrokeShape="RoundRectangle 32"
        IsVisible="True"
        Background="Brown">
        <Label
            HorizontalOptions="Center"
            VerticalOptions="CenterAndExpand"
            Text="Front" />
    </Border>

    <Border
        x:Name="BackCard"
        WidthRequest="200"
        HeightRequest="400"
        StrokeShape="RoundRectangle 32"
        IsVisible="False"
        Background="Blue">
        <Label
            HorizontalOptions="Center"
            VerticalOptions="CenterAndExpand"
            Text="Back" />
    </Border>

</VerticalStackLayout>