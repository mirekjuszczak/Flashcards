<?xml version="1.0" encoding="utf-8" ?>

<Grid
    x:Class="FlashCards.UI.Controls.CategoriesCollectionControl"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:FlashCards.UI.Controls"
    x:Name="RootCategoryCollectionView"
    Margin="30,20">

    <CollectionView
        ItemsSource="{Binding CategoryCollection, Source={x:Reference RootCategoryCollectionView}, x:DataType=RootCategoryCollectionView}"
        RemainingItemsThreshold="5">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <!--  Probably better to use only CategoryCardControl directly on page related to ViewModel - we can use then ObservableProperty as CardsCout  -->
                <controls:CategoryCardControl
                    Margin="0,10"
                    HorizontalOptions="Fill"
                    VerticalOptions="Start"
                    CategoryName="{Binding Name}"
                    CountCards="{Binding CountCards}" />
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</Grid>