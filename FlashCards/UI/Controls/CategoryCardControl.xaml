<?xml version="1.0" encoding="utf-8" ?>

<Border
    x:Class="FlashCards.UI.Controls.CategoryCardControl"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Name="Root"
    HeightRequest="150"
    Margin="0,20,0,0"
    Padding="24,20"
    Style="{StaticResource CategoryCardBackgroundStyle}"
    StrokeShape="RoundRectangle 8"
    StrokeThickness="1">

    <VerticalStackLayout Spacing="12">
        <Label
            Text="Category"
            TextColor="{AppThemeBinding Light={StaticResource AccentPrimaryLight},
                                        Dark={StaticResource AccentPrimaryDark}}"
            Style="{StaticResource Text_SubTitle}" />
        <Label
            HorizontalOptions="Center"
            Text="{Binding CategoryName, Source={x:Reference Root}, x:DataType=Root}"
            LineBreakMode="WordWrap"
            Style="{StaticResource Text_Title}" />

        <Grid
            ColumnDefinitions="*, Auto, Auto"
            ColumnSpacing="10">
            <Label
                Grid.Column="0"
                HorizontalOptions="Start"
                VerticalOptions="End"
                Text="{Binding LastModified, StringFormat='Modified: {0}'}"
                TextColor="{AppThemeBinding Light={StaticResource TextTertiaryLight},
                                            Dark={StaticResource TextTertiaryDark}}"
                FontSize="12" />

            <Border
                Grid.Column="2"
                Padding="10,8"
                HorizontalOptions="End"
                VerticalOptions="End"
                BackgroundColor="{AppThemeBinding Light={StaticResource AccentPrimaryLight},
                                                  Dark={StaticResource AccentPrimaryDark}}"
                Opacity="0.7"
                StrokeShape="RoundRectangle 12"
                StrokeThickness="0">
                <HorizontalStackLayout Spacing="6">
                    <Label
                        Text="Cards"
                        TextColor="{AppThemeBinding Light={StaticResource TextPrimaryLight},
                                                    Dark={StaticResource TextPrimaryLight}}"
                        FontAttributes="Bold"
                        Style="{StaticResource Text_Label}" />
                    <Label
                        Text="{Binding Path=CountCards, Source={x:Reference Root}, x:DataType=Root}"
                        TextColor="{AppThemeBinding Light={StaticResource TextPrimaryLight},
                                                    Dark={StaticResource TextPrimaryLight}}"
                        FontAttributes="Bold"
                        Style="{StaticResource Text_Label}" />
                </HorizontalStackLayout>
            </Border>
        </Grid>
    </VerticalStackLayout>

</Border>