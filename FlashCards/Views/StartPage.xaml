<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="FlashCards.Views.StartPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    BackgroundColor="{AppThemeBinding Light={StaticResource BackgroundPrimaryLight},
                                      Dark={StaticResource BackgroundPrimaryDark}}">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">

            <Image
                Source="{StaticResource illustration_cards_PNG}"
                HeightRequest="200"
                Margin="0,100"
                HorizontalOptions="Center" />

            <Button
                x:Name="StartButton"
                WidthRequest="200"
                Margin="0,0,0,20"
                HorizontalOptions="Center"
                VerticalOptions="End"
                Text="Showroom"
                Style="{StaticResource PrimaryButtonStyle}"
                Command="{Binding OnGoToShowroomCommand}" />

            <Button
                x:Name="ShowroomButton"
                WidthRequest="200"
                Margin="0,0,0,20"
                HorizontalOptions="Center"
                VerticalOptions="End"
                Text="Start Application"
                Style="{StaticResource PrimaryButtonStyle}"
                IsEnabled="False" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
