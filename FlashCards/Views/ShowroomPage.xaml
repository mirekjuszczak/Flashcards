<?xml version="1.0" encoding="utf-8" ?>

<ContentPage
    x:Class="FlashCards.Views.ShowroomPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    BackgroundColor="{AppThemeBinding Light={StaticResource Theme_02_Light_Color},
                                      Dark={StaticResource Theme_02_Dark_Color}}">

    <VerticalStackLayout
        Padding="50,10"
        HorizontalOptions="Center">

        <Button
            Margin="20,10"
            VerticalOptions="Start"
            Text="TwoSidesCard Control"
            Command="{Binding OnGoToTwoSidesCardPage}" />

        <Button
            Margin="20,10"
            VerticalOptions="Start"
            Text="CardsSwipeCollection Control"
            Command="{Binding OnGoToCardsSwipeCollectionCardPage}" />

    </VerticalStackLayout>
</ContentPage>